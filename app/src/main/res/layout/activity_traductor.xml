<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNegro"
    tools:context=".TraductorActivity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="108dp"
        android:gravity="center"
        android:text="Español"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spEspañol"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="Ingles"
        android:textColor="@color/colorBlanco"
        app:layout_constraintBottom_toBottomOf="@+id/spIngles"
        app:layout_constraintEnd_toStartOf="@+id/spIngles"
        app:layout_constraintTop_toTopOf="@+id/spIngles" />

    <Spinner
        android:id="@+id/spIngles"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:layout_marginTop="76dp"
        android:background="@color/colorBlanco"
        app:layout_constraintEnd_toEndOf="@+id/lblResultado"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/lblResultado"
        app:layout_constraintTop_toBottomOf="@+id/lblResultado" />

    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="327dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="Traduccion"
        android:textColor="@color/colorBlanco"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="@+id/btnTraducir"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtPalabra"
        app:layout_constraintTop_toTopOf="@+id/txtPalabra" />

    <Button
        android:id="@+id/btnTraducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Traducir"
        app:layout_constraintBottom_toBottomOf="@+id/txtPalabra"
        app:layout_constraintStart_toEndOf="@+id/txtPalabra"
        app:layout_constraintTop_toTopOf="@+id/txtPalabra"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/lblqueaque"
        android:layout_width="158dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="52dp"
        android:gravity="center"
        android:text="ESPAÑOL A INGLES"
        android:textColor="@color/colorBlanco"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/swTraduccion"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Switch
        android:id="@+id/swTraduccion"
        android:layout_width="117dp"
        android:layout_height="32dp"
        android:layout_marginTop="52dp"
        android:text="Traducción"
        android:textColor="@color/colorBlanco"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/txtPalabra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/colorBlanco"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="@color/colorBlanco"
        app:layout_constraintEnd_toEndOf="@+id/swTraduccion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/swTraduccion"
        app:layout_constraintTop_toBottomOf="@+id/swTraduccion" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Traductor"
        android:textColor="@color/colorBlanco"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spEspañol"
        android:layout_width="254dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:background="@color/colorBlanco"
        app:layout_constraintEnd_toEndOf="@+id/spIngles"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/spIngles"
        app:layout_constraintTop_toBottomOf="@+id/spIngles" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="78dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Items"
        android:textColor="@color/colorBlanco"
        app:layout_constraintEnd_toEndOf="@+id/lblResultado"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/lblResultado"
        app:layout_constraintTop_toBottomOf="@+id/lblResultado" />
</android.support.constraint.ConstraintLayout>